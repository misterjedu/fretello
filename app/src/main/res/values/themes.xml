<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fretollochallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fretello_gold</item>
        <item name="colorPrimaryVariant">@color/fretello_gold_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultButton" parent="Theme.Fretollochallenge">
        <item name="android:padding">@dimen/margin_20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/fretello_gold</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.Fretollochallenge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.Fretollochallenge.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.Fretollochallenge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fretollochallenge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>